{
  "name": "demo-graphql",
  "version": "1.0.0",
  "description": "Very tiny application for showing the power of graphQL",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "start": "./node_modules/nodemon/bin/nodemon.js server.js",
    "sequelize-skeleton": "./node_modules/sequelize-cli/lib/sequelize init:models; ./node_modules/sequelize-cli/lib/sequelize init:config",
